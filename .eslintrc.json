{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "xo",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "no-negated-condition": 0,
        "@typescript-eslint/no-this-alias": [
            "error",
            {
                "allowDestructuring": false,
                "allowedNames": ["self"]
            }
        ]
    }
}
